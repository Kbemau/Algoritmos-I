// Sumatoria los primeros N impares hasta q salga un numero negativo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include "iostream"

using namespace std;

int main()
{int N,s,i,t,cont;
cout<< "introducir cuantos numeros (N) : ";
	cin>> N;
	while(N>0){
	s=1;
	cont=1;
	for(i=1;i<N;i++)
	{  
		s=s+(i*2+1);
	}			
	cout<<"La suma es" << s;
	cin>>N;
	}	
	getch();
    		return 0;
}
